# Base de datos PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@db:5432/frigate_events

# JWT Secret Key (CAMBIAR EN PRODUCCIÓN - generar con: openssl rand -base64 32)
JWT_SECRET_KEY=super-secret-key-change-in-production

# Usuario admin por defecto
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin123!
DEFAULT_ADMIN_WHATSAPP=+573001234567

# WhatsApp Business API
# Obtén tu token en: https://developers.facebook.com/apps/
# Tutorial completo en el README.md
WHATSAPP_TOKEN=tu_token_de_meta_aqui
WHATSAPP_PHONE_NUMBER_ID=tu_phone_number_id_aqui

# CORS (opcional, por defecto permite todos)
# Descomenta y configura en producción:
# CORS_ORIGINS=http://localhost:5173,https://tu-dominio.vercel.app

# Frigate Configuration
# URL interna (para Docker Compose local)
FRIGATE_HOST=http://frigate:5000
# Si usas Ngrok o Cloudflare Tunnel, pon la URL pública aquí:
# FRIGATE_HOST=https://tu-url-ngrok.ngrok-free.app

FRIGATE_CONFIG_PATH=/config/config.yml

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_correo@gmail.com
SMTP_PASSWORD=tu_contraseña_de_aplicacion
EMAILS_FROM_EMAIL=noreply@vidria.com
EMAILS_FROM_NAME=Vidria Security

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
