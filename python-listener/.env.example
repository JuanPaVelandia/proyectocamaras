# MQTT Broker Configuration
MQTT_HOST=mosquitto
MQTT_PORT=1883

# Backend API URL
# Para uso local con Docker Compose:
CLOUD_API_URL=http://backend:8000/api/events/

# Si tu backend está en Railway o en la nube, usa la URL pública:
# CLOUD_API_URL=https://tu-backend.railway.app/api/events/

# API Key (opcional, para autenticación adicional)
CLOUD_API_KEY=super-token-secreto

# Mapeo de nombres de cámaras
# Si el nombre en Frigate NO coincide con el registrado en el panel web, usa este mapeo
# Formato: nombre_en_frigate:nombre_en_panel_web
# Ejemplo con una cámara:
# CAMERA_MAPPING=camara_entrada:cam_recibo
#
# Ejemplo con múltiples cámaras (separadas por coma):
# CAMERA_MAPPING=camara_entrada:cam_recibo,camara_cocina:cam_cocina,cam_patio:cam_jardin
CAMERA_MAPPING=
